@using AdressenMeister.Web.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Der AdressenMeister</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/User">AdressenMeister</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                @if (((ViewBag.Mode as PageSection?) ?? PageSection.User) == PageSection.User)
                {
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/User">Alle Mitglieder</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/UserChange">Deine Daten</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Logout">Logout</a>
                        </li>
                    </ul>
                }
                else if (((ViewBag.Mode as PageSection?) ?? PageSection.Admin) == PageSection.Admin)
                {
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Admin">Übersicht</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/AdminNew">Neue Mitglieder</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Logout">Logout</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - AdressenMeister - Martin Brenn - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>